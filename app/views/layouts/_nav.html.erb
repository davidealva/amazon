<div class="hero-head">
<nav class="navbar is-transparent" role="navigation" aria-label="main navigation">
  <div class="container">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <strong>Amazon Health Directory</strong>
      </a>

      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <%= link_to "Articles", articles_path, class: "navbar-item" %>
        <%= link_to "Business Directory", directory_index_path, class: "navbar-item" %>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <div class="navbar-item has-dropdown is-hoverable">
            <% if user_signed_in? %>
              <div class="navbar-link">
                <%= link_to "Dashboard", dashboard_path, class: "navbar-item" %>
              </div>
              
              <div class="navbar-dropdown">
                <%= link_to "Edit Account", edit_account_path(current_user), class: "navbar-item" %>
              </div>

            <% end %> 
          </div>

          <div class="buttons">
            <% if user_signed_in? %>
              <%= link_to "Logout", destroy_user_session_path, :method => :delete, :data => { :no_turbolink => true }, class: "button is-light" %>
            <% else %>
              <%= link_to "Sign Up", new_user_registration_path, class: "button is-dark" %>  
              <%= link_to "Log In", new_user_session_path, class: "button is-light" %>  
            <% end %> 
          </div>
        </div>
      </div>
    </div>
  </div>
