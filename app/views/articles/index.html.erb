<section class='dashboard'>
  <div class="container">
    <div class="columns">
      <div class="column is-3">
        <h1 class="is-size-4">Search by:</h1>
         <%= search_form_for @search, url: search_articles_path , method: :post do|f| %>
            <div class="field">
              <%=f.label :content_or_action_text_rich_text_body_cont, "Article Content", class: 'label' %>
              <div class="control">
                <%=f.search_field :content_or_action_text_rich_text_body_cont, class: 'input' %>
              </div>    
            </div>
            <div class="actions"><%=f.submit "Search...", class: 'button is-dark' %></div>
          <% end %>
      </div>
      <div class="column is-8">
        <h1 class="is-size-4">Articles</h1>

        <div class="table-container">
          <table class="table is-fullwidth">
            <thead>
              <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @articles.each do |article| %>
                <tr>
                  <td><%= link_to article.title, article %></td>
                  <td><%= truncate(strip_tags(article.content.to_s), length: 40) %></td>
                  <td><%= article.author %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>