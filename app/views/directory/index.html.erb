<section class='dashboard'>
  <div class="container">
    <div class="columns">
      <div class="column is-2">
        <h1>A Side</h1>
      </div>
      <div class="column is-8">
        <h1>Business Directoy Listing</h1>

        <div class="table-container">
          <table class="table is-fullwidth">
            <thead>
              <tr>
                <th>Name</th>
                <th>Active</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @accounts.each do |account| %>
                <tr>
                  <td><%= account.name %></td>
                  <td><%= account.active %></td>
                  <td><%= link_to 'Show',  directory_path(account) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>